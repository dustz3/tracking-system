    .container
      .header
        h1 🚚 貨運追蹤查詢
      
      // 圖片 Modal
      #imageModal.image-modal
        .image-modal-content
          span.image-modal-close(onclick="closeImageModal()") &times;
          img#modalImage(src="" alt="附件圖片")
      
      .search-section
        .search-label 請輸入您的追蹤編號
        .search-hint 輸入您的 Tracking ID 來查詢貨運狀態
        input#trackingInput.search-input(
          type="text" 
          placeholder="例如：AK-24071009" 
          onkeypress="handleKeyPress(event)"
        )
        button.search-button(onclick="searchTracking()") 查詢
        button.clear-button(onclick="clearAll()") 清除
      
      #message
      #results
    
    script.
      // API 配置
      const API_CONFIG = {
        BASE_URL: 'https://tracking-system-f6d5.onrender.com',
        ENDPOINTS: {
          SEARCH: '/api/search-tracking',
          TEST: '/api/test-connection',
          STATS: '/api/stats',
          CLEAR_CACHE: '/api/clear-cache',
        },
      };

      // 搜尋追蹤號碼
      async function searchTracking() {
        const trackingInput = document.getElementById('trackingInput');
        const trackingId = trackingInput ? trackingInput.value.trim() : '';

        // 驗證輸入
        const validation = validateTrackingId(trackingId);
        if (!validation.valid) {
          showMessage(validation.message, 'error');
          return;
        }

        // 清除之前的訊息和結果
        clearMessage();
        clearResults();

        // 顯示載入狀態
        showLoading();

        try {
          // 呼叫 API
          const data = await searchTrackingAPI(trackingId);

          // 顯示結果
          displayShipments(data.records || []);

          if (data.records && data.records.length > 0) {
            showMessage(
              `找到 ${data.records.length} 筆記錄`,
              'success'
            );
          } else {
            showMessage('未找到相關記錄', 'info');
          }
        } catch (error) {
          console.error('搜尋失敗:', error);

          let errorMessage = '查詢失敗，請稍後再試';
          if (error.message.includes('401')) {
            errorMessage = 'API 認證失敗，請聯繫管理員';
          } else if (error.message.includes('404')) {
            errorMessage = '未找到相關記錄';
          } else if (error.message.includes('500')) {
            errorMessage = '伺服器錯誤，請稍後再試';
          }

          showMessage(errorMessage, 'error');
          clearResults();
        }
      }

      // 清除所有內容
      function clearAll() {
        // 清除輸入框
        const trackingInput = document.getElementById('trackingInput');
        if (trackingInput) {
          trackingInput.value = '';
        }
        
        // 清除訊息
        clearMessage();
        
        // 清除結果
        clearResults();
      }

      // API 搜尋函數
      async function searchTrackingAPI(trackingId) {
        try {
          const response = await fetch(
            `${API_CONFIG.BASE_URL}${
              API_CONFIG.ENDPOINTS.SEARCH
            }?trackingId=${encodeURIComponent(trackingId)}`
          );

          if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
          }

          const data = await response.json();
          return data;
        } catch (error) {
          console.error('搜尋失敗:', error);
          throw error;
        }
      }

      // 顯示貨運記錄
      function displayShipments(records) {
        const resultsDiv = document.getElementById('results');
        if (!resultsDiv) return;

        if (!records || records.length === 0) {
          resultsDiv.innerHTML = `
            <div class="no-result">
              <p>未找到相關的貨運記錄</p>
              <p>請確認追蹤號碼是否正確</p>
            </div>
          `;
          return;
        }

        let html = '';

        records.forEach((record) => {
          const fields = record.fields;
          html += `<div class="shipment-card">`;

          // 顯示追蹤號碼
          if (fields['Tracking ID']) {
            html += `<div class="tracking-id">Tracking ID: ${fields['Tracking ID']}</div>`;
          }

          // 顯示所有欄位
          html += `<div class="shipment-details">`;
          
          // 先處理非附件和非備註的欄位
          Object.keys(fields).forEach((key) => {
            const value = fields[key];
            
            // 跳過附件和備註，稍後處理
            if (key === '附件／憑證' || key === '備註') {
              return;
            }
            
            let displayValue = value;

            // 格式化日期
            if (
              key.toLowerCase().includes('date') ||
              key.toLowerCase().includes('time')
            ) {
              displayValue = formatDate(value);
            }

            // 跳過空值
            if (displayValue === '' || displayValue === null || displayValue === undefined) {
              return;
            }

            html += `
              <div class="detail-item">
                <div class="detail-label">${key}</div>
                <div class="detail-value">${displayValue}</div>
              </div>
            `;
          });
          
          // 處理備註（移到附件位置）
          if (fields['備註']) {
            html += `
              <div class="detail-item">
                <div class="detail-label">備註</div>
                <div class="detail-value">${fields['備註']}</div>
              </div>
            `;
          }
          
          // 處理附件（移到備註位置）
          if (fields['附件／憑證']) {
            const value = fields['附件／憑證'];
            let displayValue = '';
            
            if (Array.isArray(value) && value.length > 0 && value[0].type) {
              // 這是 Airtable 的附件欄位
              value.forEach((attachment, index) => {
                if (attachment.type && attachment.type.startsWith('image/')) {
                  // 圖片附件
                  displayValue += `
                    <div class="attachment-item">
                      <img src="${attachment.url}" 
                           alt="附件 ${index + 1}" 
                           class="attachment-image"
                           onclick="openImageModal('${attachment.url}', '${attachment.filename || '附件'}')"
                           title="點擊查看大圖">
                    </div>
                  `;
                } else {
                  // 其他類型附件
                  displayValue += `
                    <div class="attachment-item">
                      <a href="${attachment.url}" 
                         class="attachment-link" 
                         target="_blank"
                         title="${attachment.filename || '下載附件'}">
                        📎 ${attachment.filename || '附件'}
                      </a>
                    </div>
                  `;
                }
              });
            }
            
            if (displayValue) {
              html += `
                <div class="detail-item">
                  <div class="detail-label">附件／憑證</div>
                  <div class="detail-value">${displayValue}</div>
                </div>
              `;
            }
          }
          
          html += `</div>`;
          html += `</div>`;
        });

        resultsDiv.innerHTML = html;
      }

      // 工具函數
      function showMessage(message, type = 'info') {
        const messageDiv = document.getElementById('message');
        if (messageDiv) {
          messageDiv.innerHTML = `<div class="message ${type}">${message}</div>`;
        }
      }

      function clearMessage() {
        const messageDiv = document.getElementById('message');
        if (messageDiv) {
          messageDiv.innerHTML = '';
        }
      }

      function handleKeyPress(event) {
        if (event.key === 'Enter') {
          const searchButton = document.querySelector('.search-button');
          if (searchButton) {
            searchButton.click();
          }
        }
      }

      function formatDate(dateString) {
        if (!dateString) return '無資料';

        try {
          const date = new Date(dateString);
          return date.toLocaleDateString('zh-TW', {
            year: 'numeric',
            month: '2-digit',
            day: '2-digit',
            hour: '2-digit',
            minute: '2-digit',
          });
        } catch (error) {
          return dateString;
        }
      }

      function validateTrackingId(trackingId) {
        if (!trackingId || trackingId.trim() === '') {
          return { valid: false, message: '請輸入追蹤號碼' };
        }

        if (trackingId.length < 3) {
          return { valid: false, message: '追蹤號碼至少需要 3 個字元' };
        }

        return { valid: true, message: '' };
      }

      function showLoading() {
        const resultsDiv = document.getElementById('results');
        if (resultsDiv) {
          resultsDiv.innerHTML = `
            <div class="loading">
              <div class="spinner"></div>
              正在查詢中...
            </div>
          `;
        }
      }

      function clearResults() {
        const resultsDiv = document.getElementById('results');
        if (resultsDiv) {
          resultsDiv.innerHTML = '';
        }
      }

      // 圖片模態框功能
      function openImageModal(imageUrl, imageName) {
        const modal = document.getElementById('imageModal');
        const modalImage = document.getElementById('modalImage');
        
        if (modal && modalImage) {
          modalImage.src = imageUrl;
          modalImage.alt = imageName || '附件圖片';
          modal.style.display = 'block';
          
          // 點擊背景關閉 modal
          modal.onclick = function(e) {
            if (e.target === modal) {
              closeImageModal();
            }
          };
        }
      }

      function closeImageModal() {
        const modal = document.getElementById('imageModal');
        if (modal) {
          modal.style.display = 'none';
        }
      }

      // 初始化頁面
      function initializeTrackingPage() {
        // 可以添加頁面初始化邏輯
        console.log('貨運追蹤系統已載入');
      }

      // 頁面載入完成後初始化
